package com.sortings;

public class MergeSort {

    public static void sortElements(int[] arr, int l, int r) {
        if (l < r) {
            int m = l + (r - l) / 2;

            sortElements(arr, l, m);
            sortElements(arr, m + 1, r);

            mergeSortedArray(arr, l, m, r);
        }
    }

    public static void mergeSortedArray(int[] arr, int l, int m, int r) {

        int n1 = m - l + 1;
        int n2 = r - m;

        int[] L = new int[n1];
        int[] R = new int[n2];

        // Copy data to temp arrays
        for (int i = 0; i < n1; i++)
            L[i] = arr[l + i];

        for (int j = 0; j < n2; j++)
            R[j] = arr[m + 1 + j];

        int i = 0, j = 0, k = l;

        // Merge the temp arrays
        while (i < n1 && j < n2) {
            if (L[i] <= R[j]) {
                arr[k] = L[i];
                i++;
            } else {
                arr[k] = R[j];
                j++;
            }
            k++;
        }

        // Copy remaining elements of L[]
        while (i < n1) {
            arr[k] = L[i];
            i++;
            k++;
        }

        // Copy remaining elements of R[]
        while (j < n2) {
            arr[k] = R[j];
            j++;
            k++;
        }
    }

    public static void displayData(int[] arr) {
        for (int dt : arr) {
            System.out.print(dt + " ");
        }
        System.out.println();
    }

    public static void main(String[] args) {
        int[] arr = {38, 27, 43, 3, 9, 82, 10};

        displayData(arr);
        System.out.println("----------------");

        sortElements(arr, 0, arr.length - 1);

        displayData(arr);
    }
}
