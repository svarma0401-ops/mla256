package com.dtm;

package com.dtm;

import java.util.Arrays;
import java.util.List;
import java.util.ArrayList;

class Customer {
    private String name;

    Customer(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    @Override
    public String toString() {
        return "Customer{name='" + name + "'}";
    }
}

public class Sample {
    // Filter customers by startsWith and endsWith
    public static List<Customer> filterByName(List<Customer> customers, String startsWith, String endsWith) {
        List<Customer> result = new ArrayList<>();
        for (Customer c : customers) {
            String name = c.getName();
            if ((startsWith == null || name.startsWith(startsWith)) &&
                (endsWith == null || name.endsWith(endsWith))) {
                result.add(c);
            }
        }
        return result;
    }

    public static void main(String[] args) {
        List<Customer> customers = Arrays.asList(
            new Customer("Shubham"),
            new Customer("Sahana"),
            new Customer("Samuel"),
            new Customer("Varma")
        );

        System.out.println("All Customers: " + customers);

        // Filter names starting with "Sa" and ending with "a"
        List<Customer> filtered = filterByName(customers, "Sa", "a");
        System.out.println("Filtered (startsWith 'Sa', endsWith 'a'): " + filtered);
    }
}
