package com.fls;

import java.io.FileOutputStream;
import java.io.ObjectOutputStream;
import java.util.Arrays;
import java.util.List;

public class SerialDemo {

	public static void main(String[] args) {
		
		List<PlayersData> data =Arrays.asList(new PlayersData(1,"Kohli","All Rounder"),
				new PlayersData(2,"Rohit","Hitman"),
				new PlayersData(3,"SKY","All rounder 360"));
		
		String path = "src/team.txt";
		
		try(ObjectOutputStream ow = new ObjectOutputStream(new FileOutputStream(path))){
			ow.writeObject(data);
			ow.flush();
			System.out.println("Done.");
			
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
				

	}

}
